{
  "name": "tests",
  "version": "1.0.0",
  "scripts": {
    "build": "docker build -t lupus-tests .",
    "prepare": "docker run --rm -v $(pwd):/app/tests -v $(pwd)/../lupus-common:/app/lupus-common --entrypoint npm lupus-tests install",
    "test": "docker run --rm --link lupus_proxy_1:proxy --link lupus_mongo_1:mongo --link lupus_redis_1:redis --network lupus_default -v $(pwd)/..:/app lupus-tests"
  },
  "license": "MIT",
  "dependencies": {
    "apickli": "^1.7.0",
    "cucumber": "^1.2.2",
    "mongoose": "^4.5.10",
    "redis": "^2.6.2",
	"lupus-common": "../lupus-common"
  }
}
